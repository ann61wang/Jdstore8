<div class="menu bg-color10">
  <ul class="menuList">
    <li class="menuList-item bg-color11">
      <%= link_to("首页", products_path)%>
    </li>
    <% Category.all.each do |category| %>
    <li class="menuList-item bg-color12">
      <%= link_to category.name, products_path(category: category.name), class: "link" %>
    </li>
    <% end %>
  </ul>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-4 col-md-4">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ￥ <%= product.price %>
    </div>
  <% end %>
</div>

<div class="text-center col-md-12 pagination">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>

